{% extends 'layout.njk' %}

{% block content %}

<div class="card table-container">
    <a href="/members/create">Novo</a>
    <table width="100%">
        <thead> {# Cabeçalho #}
            <tr> {# Linha #}
                <th>Membro</th> {# Colunas #}
                <th>Atendimento</th> {# Colunas #}
                <th>Ação</th> {# Colunas #}
            </tr>
        </thead>
        <tbody> {# Corpo da Tabela #}
            {% for member in members %}
                <tr> {# Linha #}
                    <td>
                        <span style="background-image: url({{member.avatar_url}})"></span>
                        {{ member.name }}
                    </td> {# Colunas #}
                    <td>{{ member.services }}</td>
                    <td><a href="/members/{{member.id}}">ver</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock content %}